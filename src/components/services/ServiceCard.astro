---
interface Props {
  title: string;
  description: string;
  timeline: string;
  deliverables: string[];
  highlights: string[];
  isPopular?: boolean;
}

const {
  title,
  description,
  timeline,
  deliverables,
  highlights,
  isPopular = false,
} = Astro.props;
---

<div
  class="relative bg-white dark:bg-gray-800 rounded-lg shadow-sm overflow-hidden"
>
  {
    isPopular && (
      <div class="absolute top-0 right-0 mt-4 mr-4">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200">
          Popular Choice
        </span>
      </div>
    )
  }

  <div class="p-6">
    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">
      {title}
    </h3>
    <p class="text-gray-600 dark:text-gray-400 mb-4">{description}</p>

    <div class="mb-4">
      <span class="text-sm font-medium text-gray-500 dark:text-gray-400">
        Timeline: {timeline}
      </span>
    </div>

    <div class="space-y-4">
      <div>
        <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-2">
          Key Highlights
        </h4>
        <ul class="space-y-2">
          {
            highlights.map((highlight) => (
              <li class="flex items-start">
                <svg
                  class="w-5 h-5 text-indigo-600 mr-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    strokeLinecap="round"
                    strokeLinejoin="round"
                    strokeWidth={2}
                    d="M5 13l4 4L19 7"
                  />
                </svg>
                <span class="text-sm text-gray-600 dark:text-gray-400">
                  {highlight}
                </span>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-2">
          Deliverables
        </h4>
        <ul class="space-y-2">
          {
            deliverables.map((deliverable) => (
              <li class="flex items-start">
                <svg
                  class="w-4 h-4 text-indigo-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" />
                </svg>
                <span class="text-sm text-gray-600 dark:text-gray-400">
                  {deliverable}
                </span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div class="mt-6">
      <a
        href="/contact"
        class="block w-full text-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
      >
        Start the Conversation
      </a>
    </div>
  </div>
</div>
