const principles = [
  {
    title: "Security & Quality First",
    description:
      "Every solution begins with a foundation of security and quality, integrated from the start.",
  },
  {
    title: "Developer Flow",
    description:
      "Creating seamless experiences that let developers focus on what matters most: building great software.",
  },
  {
    title: "Team Empowerment",
    description:
      "Enabling teams with the tools, knowledge, and confidence to work autonomously and effectively.",
  },
  {
