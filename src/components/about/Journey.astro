---
const milestones = [
  {
    year: '2024',
    role: 'DevOps Lead',
    description: 'Leading DevOps transformation and developer experience initiatives.',
  },
  {
    year: '2021-2023',
    role: 'Technical Team Lead',
    description: 'Led development team while driving DevOps improvements and automation.',
  },
  {
    year: '2020-2021',
    role: 'Software Engineer, DevOps',
    description: 'Established foundational DevOps practices and CI/CD pipelines.',
  },
  {
    year: '2015-2020',
    role: 'Software Engineer',
    description: 'Full-stack development across mobile, web, and automation.',
  },
];
---

<div class="max-w-2xl mx-auto">
  <div class="space-y-8">
    {milestones.map((milestone) => (
      <div class="relative pl-8 border-l-2 border-indigo-200 dark:border-indigo-800">
        <div class="absolute w-4 h-4 bg-indigo-600 rounded-full -left-[9px] mt-1.5"></div>
        <div>
          <span class="text-sm text-indigo-600 dark:text-indigo-400 font-semibold">{milestone.year}</span>
          <h3 class="mt-2 text-xl font-bold text-gray-900 dark:text-white">{milestone.role}</h3>
          <p class="mt-1 text-gray-600 dark:text-gray-400">{milestone.description}</p>
        </div>
      </div>
    ))}
  </div>
</div>