---
const features = [
  {
    name: 'Security & Quality First',
    description: 'Building secure, high-quality systems by design, not afterthought.',
  },
  {
    name: 'Developer Flow',
    description: 'Creating seamless development experiences that enable focus and productivity.',
  },
  {
    name: 'Team Empowerment',
    description: 'Enabling teams to ship confidently with automated workflows and clear processes.',
  },
  {
    name: 'Visible Impact',
    description: 'Measuring and demonstrating the value of DevOps improvements.',
  },
];
---

<section class="py-12 bg-gray-50 dark:bg-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:text-center">
      <h2 class="text-base text-indigo-600 dark:text-indigo-400 font-semibold tracking-wide uppercase">
        Core Principles
      </h2>
      <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
        Better Developer Experience
      </p>
    </div>
    <div class="mt-10">
      <div class="space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10">
        {features.map((feature) => (
          <div class="relative">
            <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">
              {feature.name}
            </h3>
            <p class="mt-2 text-base text-gray-500 dark:text-gray-400">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
