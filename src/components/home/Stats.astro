---
const stats = [
  { number: "85%", label: "Deployment Time Reduction" },
  { number: "3x", label: "Release Frequency Increase" },
  { number: "90%", label: "Environment Issues Reduced" },
  { number: "24h", label: "Average Response Time" },
];
---
<section class="bg-indigo-600 dark:bg-indigo-900">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 gap-8 md:grid-cols-4">
      {stats.map(stat => (
        <div class="text-center">
          <p class="text-3xl sm:text-4xl font-extrabold text-white">
            {stat.number}
          </p>
          <p class="mt-2 text-sm font-medium text-indigo-100">
            {stat.label}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>